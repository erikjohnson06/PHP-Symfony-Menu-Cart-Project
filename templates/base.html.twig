<!DOCTYPE html>
<html lang="en">
    <head>
        <title>{% block title %}Menu Cart | Home{% endblock %}</title>
        <meta charset="UTF-8">
        <meta name="description" content="Menu Cart">
        <meta name="keywords" content="food">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="author" content="Erik Johnson">

        <!-- Favicon -->
        <link href="{{ asset('img/favicon.ico') }}" rel="shortcut icon"/>

        <!-- Google font -->
        <link href="https://fonts.googleapis.com/css?family=Montserrat:300,300i,400,400i,500,500i,600,600i,700,700i&display=swap" rel="stylesheet">

        {% block stylesheets %}

            <!-- Stylesheets -->
            <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }} "/>
            <link rel="stylesheet" href="{{ asset('css/font-awesome.min.css') }}"/>
            <link rel="stylesheet" href="{{ asset('css/owl.carousel.min.css') }}"/>
            <link rel="stylesheet" href="{{ asset('css/slicknav.min.css') }}"/>

            <!-- Main Stylesheets -->
            <link rel="stylesheet" href="{{ asset('css/style.css') }}"/>

        {% endblock %}

        <!--[if lt IE 9]>
                <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
                <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->

    </head>
    <body>
        <!-- Page Preloder -->
        <div id="preloder">
            <div class="loader"></div>
        </div>

        <!-- Header section -->
        <header class="header-section clearfix">
            <a href="{{ path("home") }}" class="site-logo">
                <h3>
                    <span class="site-logo-style1">MENU</span>&nbsp;<span class="site-logo-style2">CART</span>
                </h3>
            </a>
            <div class="header-right">
                <div class="user-panel">
                    {%  if not is_granted("IS_AUTHENTICATED_FULLY") %}
                        <a href="{{ path("app_login") }}" class="register">Login</a>
                    {% endif %}

                    {%  if is_granted("IS_AUTHENTICATED_FULLY") %}
                        <a href="{{ path("app_logout") }}" class="register">Logout</a>
                    {% endif %}
                </div>
            </div>
            <ul class="main-menu">
                <li><a href="{{ path("home") }}">Welcome</a></li>
                <li><a href="{{ path("app_menu") }}">Menu</a></li>
                <li><a href="{{ path("app_orders") }}">Orders</a></li>
                <li><a href="{{ path("app_contact") }}">Contact</a></li>

                {%  if is_granted("IS_AUTHENTICATED_FULLY") %}

                    <li><a href="#">Employees</a>
                        <ul class="sub-menu">
                            <li><a href="{{ path("dish.edit") }}">Dishes</a></li>
                            <li><a href="{{ path("app_orders") }}">Orders</a></li>
                            <li><a href="{{ path("dish.create") }}">Create New Dish</a></li>
                            <li><a href="{{ path("app_registration") }}">Create New Account</a></li>
                            <li><a href="{{ path("app_logout") }}">Logout</a></li>
                        </ul>
                    </li>

                {% endif %}

            </ul>
        </header>
        <!-- Header section end -->

        {% block body %}

        {% endblock %}

        <!-- Intro section -->
        <section class="intro-section spad">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="section-title">
                            <h2>All You Can Eat Buffet For $19.99</h2>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <p>$19.95 per person: choose from a variety of salads and authentic cuisine options! Our locally reknown homemade pudding included!</p>
                        <a href="{{ path("app_menu") }}" class="site-btn">Try it now</a>
                    </div>
                </div>
            </div>
        </section>
        <!-- Intro section end -->

        {% block footer %}

            <!-- Footer section -->
            <footer class="footer-section">
                <div class="container">
                    <div class="row">
                        <div class="col-xl-6 col-lg-7 order-lg-2">
                            <div class="row">
                                <div class="col-sm-4">
                                    <div class="footer-widget">
                                        <h2>About us</h2>
                                        <ul>
                                            <li><a href="#">Welcome</a></li>
                                            <li><a href="#">Menu</a></li>
                                            <li><a href="#">Order</a></li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="footer-widget">
                                        <h2>Menu Cart</h2>
                                        <ul>
                                            <li><a href="#">Beverages</a></li>
                                            <li><a href="#">Appetizers</a></li>
                                            <li><a href="#">Entrees</a></li>
                                            <li><a href="#">Desserts</a></li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="footer-widget">
                                        <h2>Contact</h2>
                                        <ul>
                                            <li><a href="#">Servers</a></li>
                                            <li><a href="#">Login</a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-6 col-lg-5 order-lg-1">

                            <div class="site-logo">
                                <h3>
                                    <span class="site-logo-style1">MENU</span>&nbsp;<span class="site-logo-style2">CART</span>
                                </h3>
                            </div>

                            <div class="copyright">
                                Copyright &copy;<script>document.write(new Date().getFullYear());</script> All rights reserved
                            </div>
                            <div class="social-links">
                                <a href="#"><i class="fa fa-instagram"></i></a>
                                <a href="#"><i class="fa fa-pinterest"></i></a>
                                <a href="#"><i class="fa fa-facebook"></i></a>
                                <a href="#"><i class="fa fa-twitter"></i></a>
                                <a href="#"><i class="fa fa-youtube"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </footer>
            <!-- Footer section end -->

        {% endblock %}

        {% block javascripts %}

            <!-- Javascripts -->
            <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js" integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js" integrity="sha384-mQ93GR66B00ZXjt0YO5KlohRA5SY2XofN4zfuZxLkoj1gXtW8ANNCe9d5Y3eG5eD" crossorigin="anonymous"></script>

            <script src="{{ asset('js/jquery-3.2.1.min.js') }}"></script>
            <script src="{{ asset('js/jquery.slicknav.min.js') }}"></script>
            <script src="{{ asset('js/owl.carousel.min.js') }}"></script>
            <script src="{{ asset('js/mixitup.min.js') }}"></script>
            <script src="{{ asset('js/main.js') }}"></script>

        {% endblock %}

    </body>
</html>