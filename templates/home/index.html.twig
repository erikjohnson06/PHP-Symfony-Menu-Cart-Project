{% extends 'base.html.twig' %}

{% block title %}Menu Cart | Home{% endblock %}

{% block body %}

    <section class="hero-section">
        <div class="hero-slider owl-carousel">
            <div class="hs-item">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="hs-text">
                                <h2><span>{{ dish1.name }}</span>!</h2>
                                <p>{{ dish1.description }} for ${{ dish1.price }}</p>
                                <a href="{{ path('app_menu') }}" class="site-btn">Menu</a>
                                <a href="{{ path('app_order', {id: dish1.id}) }}" class="site-btn sb-c2">Order</a>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="hr-img">
                                <img src="{{ asset('images/' ~ dish1.image) }}" alt="">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="hs-item">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="hs-text">
                                <h2><span>{{ dish2.name }}</span>!</h2>
                                <p>{{ dish2.description }} for ${{ dish2.price }}</p>
                                <a href="{{ path('app_menu') }}" class="site-btn">Menu</a>
                                <a href="{{ path('app_order', {id: dish2.id}) }}" class="site-btn sb-c2">Order</a>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="hr-img">
                                <img src="{{ asset('images/' ~ dish2.image) }}" alt="">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}
