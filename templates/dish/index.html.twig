{% extends 'base.html.twig' %}

{% block title %}Menu Cart | Edit Dishes{% endblock %}

{% block body %}

    {% for message in app.flashes('success') %}

        <div class="alert alert-success">
            <h3>{{ message }} </h3>
        </div>
    {% endfor %}
    <br />

    <div class="container">

        <h2>Edit Dishes</h2>
        <br />
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Order #</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Category</th>
                    <th>Price</th>
                    <th>Remove</th>
                    <th><a href="{{ path('dish.create') }}">Create New</a></th>
                </tr>
            </thead>
            <tbody>
                {% for dish in dishList %}

                    <tr>
                        <td>{{ dish.id }}</td>
                        <td><a href="{{ path('dish.show', {id : dish.id}) }}">{{ dish.name }}</a></td>
                        <td>{{ dish.description }}</td>
                        <td>{{ dish.category }}</td>
                        <td>{{ dish.price }}</td>
                        <td><a href="{{ path('dish.delete', {id : dish.id}) }}">X</a></td>
                        <td></td>
                    </tr>

                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
